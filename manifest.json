{
  "manifest_version": 3,
  "name": "Daily Fact",
  "description": "Learn a new fact every day from Wikipedia.",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.wikipedia.org/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
